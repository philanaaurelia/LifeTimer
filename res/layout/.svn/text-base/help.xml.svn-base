<?xml version="1.0" encoding="utf-8"?>


 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >
  
  <ScrollView
    android:id="@+id/scrollview55"
    android:layout_width="250px"
    android:layout_height="250px"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:paddingLeft="7px"
  android:paddingRight="7px"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >
  
   <TextView    
    	android:id="@+id/help1"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="left"
    	android:textSize="15sp"
    	android:paddingBottom="5px"
    	android:textStyle="bold"
    	android:text="How do I delete a timer?"
  />
  
  <TextView    
    	android:id="@+id/help2"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="left"
    	android:textSize="12sp"
    	android:paddingBottom="10px"
    	android:text="On the home screen, click the view button. On the view screen, click the menu button on the phone. The delete option will show up."
  />
  
  <TextView    
    	android:id="@+id/help3"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="left"
    	android:textSize="15sp"
    	android:paddingBottom="5px"
    	android:textStyle="bold"
    	android:text="How can I edit my Timers?"
  />
  
  <TextView    
    	android:id="@+id/help4"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="left"
    	android:textSize="12sp"
    	android:paddingBottom="10px"
    	android:text="As of right now, you can only delete the timer and re-create it with the correct information."
  />
  
   <TextView    
    	android:id="@+id/help5"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="left"
    	android:textSize="15sp"
    	android:paddingBottom="5px"
    	android:textStyle="bold"
    	android:text="Are there other colors available to set my categories/timers?"
  />
  
  <TextView    
    	android:id="@+id/help6"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="left"
    	android:textSize="12sp"
    	android:paddingBottom="10px"
    	android:text="No. There are predefined colors, but we are working on creating more and eventually letting the user create their own."
  />
  
  <TextView    
    	android:id="@+id/help7"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="left"
    	android:textSize="15sp"
    	android:paddingBottom="5px"
    	android:textStyle="bold"
    	android:text="Is there any way to import my timers to set off an alarm when time is up?"
  />
  
  <TextView    
    	android:id="@+id/help8"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="left"
    	android:textSize="12sp"
    	android:paddingBottom="10px"
    	android:text="For the moment, there is not. We are working on this for the next update."
  />
  </LinearLayout>
   </ScrollView>
  
  <Button android:text="Done"
  		android:layout_margin="10px"
        android:id="@+id/ButtonDone2"
        android:layout_width="80px"
        android:layout_gravity="center"
        android:textSize="17px"
        android:layout_height="40px">
    </Button> 
  
  </LinearLayout>
 